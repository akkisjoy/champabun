<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/dummy3" />

    <champak.champabun.business.utilities.utilClass.TextViewLobster
        android:id="@+id/titleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="My Folder"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:reflectionColor="#888" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleHeader"
        android:orientation="vertical"
        android:paddingBottom="@dimen/lsongs_TopViewBottomMargin"
        android:paddingLeft="18dp"
        android:paddingRight="0dp"
        android:paddingTop="@dimen/lsongs_TopViewTopMargin">

        <champak.champabun.business.utilities.utilClass.TypefaceTextView
            style="@style/TextViewStyle.JosefinSans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:singleLine="true"
            android:text="@string/directory"
            android:textColor="#ffffff"
            android:textSize="@dimen/lsongs_songTextSize" />

        <champak.champabun.business.utilities.utilClass.TypefaceTextView
            android:id="@+id/path"
            style="@style/TextViewStyle.JosefinSans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/lsongs_albumTextSize" />

        <ListView
            android:id="@+id/list"
            style="@style/ListViewplaymee"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/rayMenu_marginTop"
            android:layout_weight="1"
            android:background="#46000000"
            android:fastScrollEnabled="true" />
    </LinearLayout>


</RelativeLayout>