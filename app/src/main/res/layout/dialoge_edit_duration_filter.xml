<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/Background_Dialog"
    android:layout_margin="@dimen/dialog_padding"
    >

    <champak.champabun.ui.TypefaceTextView
        style="@style/TextViewStyle.Dialouge.heading"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/duration_filter"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <champak.champabun.ui.TypefaceTextView
            style="@style/TextViewStyle.Dialouge.secondary"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:singleLine="true"
            android:text="@string/duration"
            />

        <champak.champabun.ui.TypefaceEditText
            style="@style/EditTextStyle.Dialouge"
            android:id="@+id/ti"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="right|center_vertical"
            android:inputType="number"
            android:singleLine="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <Button
            android:id="@+id/dBOK"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/dialog_icn_ok_normal" />

        <Button
            android:id="@+id/dBCancel"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/dialog_icn_cancel_normal" />
    </LinearLayout>

</LinearLayout>