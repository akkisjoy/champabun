<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dialog_padding"
    android:background="@color/Background_Dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <Button
            android:id="@+id/dBCancel"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:background="@drawable/dialog_icn_cancel_normal" />

        <champak.champabun.business.utilities.utilClass.TextViewLobster
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/duration_filter"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/dBOK"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:background="@drawable/dialog_icn_ok_normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <champak.champabun.business.utilities.utilClass.TextViewGravilar
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/duration"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <champak.champabun.business.utilities.utilClass.EditTextGravilight
            android:id="@+id/ti"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="right|center_vertical"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>