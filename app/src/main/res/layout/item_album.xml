<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/itemalbum_albumimage_size"
        android:layout_height="@dimen/itemalbum_albumimage_size"
        android:scaleType="centerCrop" />

    <champak.champabun.business.utilities.utilClass.TextViewGravilar
        android:id="@+id/text"
        android:layout_width="@dimen/itemalbum_albumimage_size"
        android:layout_height="@dimen/itemalbum_albumtextLayout_size"
        android:background="#cc000000"
        android:gravity="center"
        android:maxLines="1"
        android:shadowColor="#60ffffff"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="16"
        android:textColor="#ccffffff"
        android:textSize="@dimen/itemalbum_albumtext_size" />

</LinearLayout>