<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dialog_padding"
   	android:background="@color/Background_Dialog"
    android:orientation="vertical"
    >

    <champak.champabun.business.utilities.utilClass.TypefaceTextView
        style="@style/TextViewStyle.Dialouge.heading"    
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/language"
        />

    <ListView
        android:id="@+id/listview"
        style="@style/ListViewplaymee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <Button
            android:id="@+id/dBCancel"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/dialog_icn_cancel_normal" />
    </LinearLayout>

</LinearLayout>