<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dialog_padding"
    android:background="@color/Background_Dialog"
    android:orientation="vertical"
    >

    <champak.champabun.business.utilities.utilClass.TypefaceTextView
        style="@style/TextViewStyle.Dialouge.heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/add_to_playlist"
        />
    <ListView
        android:id="@+id/listView1"
        style="@style/ListViewplaymee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>