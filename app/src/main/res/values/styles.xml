<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
     <style name="ListViewplaymee" parent="android:Widget.Holo.ListView">
      		<item name="android:divider">@null</item>
      		<item name="android:dividerHeight">0dp</item>
      		<item name="android:fadeScrollbars">true</item>
      		<item name="android:fadingEdgeLength">34dp</item>
      		<item name="android:requiresFadingEdge">vertical</item>
			<item name="android:listSelector">@drawable/selector_list</item>
			<item name="android:overScrollMode">never</item>      		
  </style>
  <style name="SpinnerStyle" parent="android:style/Widget.ListView.DropDown">
    	<item name="android:dividerHeight">0dp</item>
    	<item name="android:background">@drawable/selector</item>
    	<item name="android:textColor">@color/TextColor_Primary_Dialog</item>
        
</style>
    
    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
    </style>

    <style name="Item.Sticky">
        <item name="android:layout_height">@dimen/sticky_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="GradientLight" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:listViewStyle">@style/listView</item>
        <item name="android:itemBackground">#999999</item>
    </style>

    <style name="GradientLight2" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@drawable/default_art</item>
        <item name="android:listViewStyle">@style/listView</item>
        <item name="android:itemBackground">@drawable/default_art</item>
    </style>
    
    <style name="listView" parent="@android:style/Widget.ListView.White"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Animations" />

    <!-- PopDownMenu -->
    <style name="Animations.PopDownMenu" />

    <style name="Animations.PopDownMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Animations.PopDownMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="Animations.PopDownMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <!-- PopUpMenu -->
    <style name="Animations.PopUpMenu" />

    <style name="Animations.PopUpMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="Animations.PopUpMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="Spinnerplaymee" parent="android:Widget.Holo.Spinner">
        <item name="android:background">@drawable/playmee_spinner_background_holo_dark</item>
        <item name="android:dropDownSelector">@drawable/playmee_list_selector_holo_dark</item>
    </style>

    <style name="SeekBarplaymee" parent="android:Widget.Holo.SeekBar">
        <item name="android:progressDrawable">@drawable/playmee_scrubber_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/playmee_scrubber_progress_horizontal_holo_dark</item>
        <item name="android:thumb">@drawable/playmee_scrubber_control_selector_holo_dark</item>
    </style>

    <style name="Animations.PopUpMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

<style name="TextViewStyle.QuickAction" parent="TextViewStyle">
        <item name="customTypeface">@string/Typeface_JosefinSans</item>
         <item name="android:textColor">@color/TextColor_Secondary_Dialog</item>
    </style>
    <style name="TextViewStyle.Dialouge.heading" parent="TextViewStyle">
        <item name="customTypeface">@string/Typeface_julius_sans_one</item>
        <item name="android:textSize">@dimen/dialog_heading</item>
         <item name="android:textColor">@color/TextColor_Heading_Dialog</item>
    </style>
    
    <style name="TextViewStyle.Dialouge.primary" parent="TextViewStyle">
        <item name="customTypeface">@string/Typeface_JosefinSans</item>
        <item name="android:textColor">@color/TextColor_Primary_Dialog</item>
    </style>
    
    <style name="TextViewStyle.Dialouge.secondary" parent="TextViewStyle">
        <item name="customTypeface">@string/Typeface_JosefinSans</item>
        <item name="android:textColor">@color/TextColor_Secondary_Dialog</item>
    </style>
    <style name="EditTextStyle.Dialouge" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="customTypeface">@string/Typeface_JosefinSans</item>
        <item name="android:textColor">@color/EditTextColor_Dialog</item>
    </style>
    
    
    
    
    <style name="TextViewStyle.JosefinSans" parent="TextViewStyle">
        <item name="customTypeface">@string/Typeface_JosefinSans</item>
    </style>
    <style name="TextViewStyle.julius_sans_one" parent="TextViewStyle">
        <item name="customTypeface">@string/Typeface_julius_sans_one</item>
    </style>

    <style name="TextViewStyle.JosefinSans_Regular" parent="TextViewStyle">
        <item name="customTypeface">@string/Typeface_JosefinSans_Regular</item>
    </style>
	<style name="TextViewStyle.Splash" parent="TextViewStyle">
        <item name="customTypeface">@string/Typeface_Splash</item>
    </style>
    <style name="TextViewStyle.Settings.Item" parent="TextViewStyle.JosefinSans">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/itemsongs_text_size</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/lsongs_listview_item_padding_left_right</item>
        <item name="android:paddingRight">@dimen/lsongs_listview_item_padding_left_right</item>
    </style>
    
    <style name="TextViewStyle.Settings.Item.Desc" parent="TextViewStyle.JosefinSans">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/setting_item_desc_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/lsongs_listview_item_padding_left_right</item>
        <item name="android:paddingRight">@dimen/lsongs_listview_item_padding_left_right</item>
    </style>

    <style name="EditTextStyle.JosefinSans" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="customTypeface">@string/Typeface_JosefinSans</item>
    </style>

</resources>